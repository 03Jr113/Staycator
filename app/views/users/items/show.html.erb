<div class='container'>
  <div class='row py-5'>
    <div class='col-12'>
      <div class="card h-100">
        <div class="card-header"><b><%= @item.name %>に関するレビュー一覧</b></div>
        <% if @item.reviews.present? %>
          <% @item.reviews.each do |review| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to hotel_review_path(review.hotel, review), class: "btn btn-outline-dark" do %>
                <i class="fa-solid fa-book-open"></i>
              <% end %>&nbsp;
              <%= review.title %>
            </li>
          </ul>
          <% end %>
        <% else %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-muted">まだレビューはありません</li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>