<div class='container'>
  <h4>新規会員登録</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  <table class="table">
    
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %>
      </td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
    </tr>
    <tr>
      <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
    </tr>
  </table>
  <% end %>

  <%= render "users/shared/links" %>

  </div>
</div>