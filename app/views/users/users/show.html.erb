<div class='container'>
  <div class='row'>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b><%= @user.name %> のページ</b></div>
        <div class="card-body">
          <% if @user.id == current_user.id %>
            <%= link_to "Edit User", edit_user_path(@user.id), class: "btn btn-outline-dark" %>
            <%= link_to "Withdraw", users_unsubscribe_path, class: "btn btn-outline-dark" %>
          <% else %>
            <%= render 'relationships/followbtn', user: @user %>
          <% end %>
          <h6 class="card-subtitle mt-3"><b>年代</b>：<%= @user.age_i18n %></h6>
          <h6 class="card-subtitle mt-3"><b>性別</b>：<%= @user.gender_i18n %></h6>
          <h6 class="card-subtitle mt-3"><b>お住まい</b>：<%= @user.area_i18n %></h6>
          <p class="card-text mt-3"><b>自己紹介</b><br><%= @user.introduction %></p>
        </div>
      </div>
    </div>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>参考になったレビュー</b></div>
        <div class="card-body">
        <% @bookmark.each do |bookmark| %>
          <h6 class="card-text mt-3">
            <%= bookmark.review.title %>&nbsp;
            <%= link_to review_path(bookmark.review.id), class: "btn btn-outline-dark" do %>
            <i class="fa-solid fa-book-open-reader"></i>
            <% end %>
          </h6>
        <% end %>
        </div>
      </div>
    </div>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b><%= @user.name %>のフォロー</b></div>
        <div class="card-body">
        <%= render 'relationships/followlist', users: @followed_users %>
        </div>
      </div>
    </div>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b><%= @user.name %>のフォロワー</b></div>
        <div class="card-body">
        <%= render 'relationships/followlist', users: @follower_users %>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <% @user.reviews.each do |review| %>
    <div class='col-4 mb-5'>
      <div class="card h-100">
        <div class="card-header"><b>投稿日</b> <%= review.created_at.strftime( '%Y.%m.%d' ) %></div>
        <div class="card-body">
          <h4 class="card-title mt-3"><b><%= review.title %></b></h4>
          <h6 class="card-subtitle mt-3 text-muted">ご利用日 <%= review.date.strftime( '%Y.%m.%d' ) %></h6>
          <p class="card-text mt-3 text-truncate"><%= review.body %></p>
          <%= link_to "Read More", review_path(review.id), class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>