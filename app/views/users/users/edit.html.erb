<div class='container'>
  <%= render 'templates/error', model: @user %>
  <div class='row'>
    <div class='col-12 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>必要事項を入力して編集してください</b></div>
        <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <div class="card-body">
          <div class="form-group">
            <label><b>プロフィール画像</b></label><br>
            <%= f.label :image, class: "fa-solid fa-image fa-3x" do %>
              <%= f.file_field :image, accept:"image/*", style:"display:none;" %>
            <% end %>
            <span>選択してください</span>
          </div>
          <div class="form-group">
            <label><b>ユーザ名</b></label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="form-group">
            <label><b>自己紹介</b></label>
            <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <label><b>年代</b></label>
            <%= f.select :age, User.ages_i18n.invert, {}, class: "form-control" %>
          </div>
          <div class="form-group">
            <label><b>性別</b></label>
            <%= f.select :gender, User.genders_i18n.invert, {}, class: "form-control" %>
          </div>
          <div class="form-group">
            <label><b>お住まい</b></label>
            <%= f.select :area, User.areas_i18n.invert, {}, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update", class: "btn btn-outline-dark" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>