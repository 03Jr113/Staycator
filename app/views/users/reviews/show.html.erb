<div class='container'>
  <div class='row'>
    <div class='col-6 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>投稿日 <%= @review.created_at.strftime( '%Y.%m.%d' ) %></b></div>
        <div class="card-body">
          <h2 class="card-title mt-3"><b></b></h2>
          <div id="star-rate-<%= @review.id %>"></div>
          <script>
          $('#star-rate-<%= @review.id %>').empty();
          $('#star-rate-<%= @review.id %>').raty({
            size: 38,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= @review.rate %>,
          });
          </script>
          <h4 class="card-title mt-3"><b><%= @review.title %></b></h4>
          <h5 class="card-subtitle mt-3">
            <%= link_to user_path(@review.user), class: "btn btn-outline-dark" do %>
              <i class="fa-solid fa-user fa-lg"></i>
              <%= @review.user.name %>
            <% end %>
          </h5>
          <p class="card-text mt-3"><%= @review.body %></p>
          <% if @review.date.present? %>
            <p class="card-text">利用日：<%= @review.date.strftime( '%Y.%m.%d' ) %></p>
          <% else %>
            <p class="card-text">利用日：不明</p>
          <% end %>
          <p class="card-text">旅行者タイプ：<%= @review.traveler_i18n %></p>
          <div class="mt-3">
            <% if @review.user == current_user %>
              <%= link_to "Edit", edit_review_path(@review.id), class:"btn btn-outline-dark" %>
              <%= link_to "Delete", review_path(@review.id), method: :delete, data: { confirm: "削除しますか？" }, class:"btn btn-outline-dark" %>
            <% else %>
              <%= render 'bookmarks/bookmark', review: @review %>
            <% end %>
          </div>
          <div class="card-text mt-3">
            <%= render 'comments/index', review: @review %>
          </div>
          <div class="mt-3">
            <%= render 'comments/form', review: @review, comment: @comment %>
          </div>
        </div>
      </div>
    </div>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>サービス一覧</b></div>
        <%= render 'templates/items', items: @review.items %>
      </div>
    </div>
    <div class='col-3 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>タグ一覧</b></div>
        <%= render 'templates/tags', tags: @review.tags %>
      </div>
    </div>
  </div>
</div>