<div class='container'>
  <h4 class="mt-3">会員情報編集</h4>
  <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
  <table class="table">
    <tbody>
      <tr>
        <th>ユーザ名</th>
        <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %></td>
      </tr>
      <tr>
        <th>年代</th>
        <td><%= f.select :age, User.ages_i18n.invert, {}, class: "form-control" %></td>
      </tr>
      <tr>
        <th>性別</th>
        <td><%= f.select :gender, User.genders_i18n.invert, {}, class: "form-control" %></td>
      </tr>
      <tr>
        <th>お住まい</th>
        <td><%= f.select :area, User.areas_i18n.invert, {}, class: "form-control" %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.submit "変更を保存", class: "btn btn-sm btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>