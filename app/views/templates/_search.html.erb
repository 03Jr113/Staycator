<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <div class='form-group'>
      <%= f.text_field :word, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.select :model, options_for_select({ "タグ" => "tag", "サービス" => "item", "レビュー" => "review"}), class: "form-control",
          :prompt => "検索項目を選択" %>
    </div>
    <div class='form-group'>
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),
          :prompt => "検索条件を選択" %>
    </div>
    <div class='form-group'>
      <%= f.submit "Search", class: "btn btn-outline-dark" %>
    </div>
  <% end %>
<% else %>
  <%= link_to "ゲストログインで見てみる", users_guest_sign_in_path, method: :post, class: "mt-3 btn btn-outline-dark" %>
<% end %>