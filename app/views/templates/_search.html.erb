<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class='row'>
    <div class='col-6 pe-0'>
      <%= f.text_field :word, :placeholder => "タグやサービス、レビューのタイトルで検索できます", class: "form-control" %>
    </div>
    <div class='col-2 px-0'>
      <%= f.select :model, options_for_select({ "タグ" => "tag", "サービス" => "item", "レビュー" => "review"}),
          {}, class: "form-control btn-outline-dark" %>
    </div>
    <div class='col-2 px-0'>
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),
          {}, class: "form-control btn-outline-dark" %>
    </div>
    <div class='col-2'>
      <%= f.submit "Search", class: "btn btn-outline-dark" %>
    </div>
  </div>
  <% end %>
<% else %>
  <%= link_to "ゲストログインで見てみる", users_guest_sign_in_path, method: :post, class: "mt-3 btn btn-outline-dark" %>
<% end %>