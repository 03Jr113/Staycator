<header class="sticky-top" style="background-color:#bd3333;">
  <nav class="navbar navbar-expand-lg">
    <div class='container'>
      <a class="navbar-brand" href="/">
        <span style="color:#fff;"><b>Staycator</b></span>
      </a>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropDown"
            aria-controls="navbarNavDropDown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropDown">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="mx-3">
            <%= link_to user_path(current_user.id) do %>
              <i class="fa-solid fa-user fa-2x" style="color:#fff;"></i><br>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to new_review_path do %>
              <i class="fa-solid fa-book fa-2x" style="color:#fff;"></i><br>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="mx-3">
            <%= link_to admins_users_path do %>
              <i class="fa-solid fa-users fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to about_path do %>
              <i class="fas fa-check-square fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to destroy_admin_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
        <% else %>
          <li class="mx-3">
            <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-user-plus fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to new_user_session_path do %>
              <i class="fa-solid fa-right-to-bracket fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
          <li class="mx-3">
            <%= link_to about_path do %>
              <i class="fas fa-chalkboard fa-2x" style="color:#fff;"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>