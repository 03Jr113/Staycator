<% review.comments.each do |comment| %>
<ul class="list-group list-group-flush">
  <li class="list-group-item">
    <% if comment.user.is_deleted == false %>
      <%= link_to user_path(comment.user), class: "btn btn-sm btn-outline-dark" do %>
        <i class="fas fa-user"></i>&nbsp;<%= comment.user.name %>
      <% end %>
    <% else %>
      退会済みユーザ
    <% end %>
    <%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "Delete", review_comment_path(review, comment), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-outline-dark" %>
    <% end %>
  </li>
</ul>
<% end %>