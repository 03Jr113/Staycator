<div class='container'>
  <div class='row'>
    <% @users.each do |user| %>
    <div class='col-4 my-5'>
      <div class="card h-100">
        <div class="card-header"><b>登録日</b> <%= user.created_at.strftime( '%Y.%m.%d' ) %></div>
        <div class="card-body">
          <h6 class="card-title mt-3"><b>ユーザID <%= user.id %></b></h6>
          <h6 class="card-subtitle mt-3"><%= user.name %> 様</h6>
          <h6 class="card-subtitle mt-3"><%= user.email %></h6>
          <% if user.is_deleted == false %>
            <p class="card-text mt-3 text-success">有効</p>
          <% else %>
            <p class="card-text mt-3 text-danger">退会</p>
          <% end %>
          <%= link_to "Show User", admins_user_path(user.id), class: "btn btn-outline-dark" %>
          <%= link_to "Edit User", edit_admins_user_path(user.id), class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>