<div class='container'>
  <div class='row py-5'>
    <div class='col-12'>
      <table class="table table-light table-striped table-hover">
        <thead>
          <tr>
            <th>ユーザID</th>
            <th>ユーザ名</th>
            <th>自己紹介</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to edit_admins_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-danger">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>