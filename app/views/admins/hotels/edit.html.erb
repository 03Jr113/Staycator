<div class='container'>
  <div class='row py-5'>
    <div class='col-6'>
      <div class="card">
        <div class="card-header"><b>ホテル情報</b></div>
        <%= form_with model: @hotel, url: admins_hotel_path(@hotel), method: :patch do |f| %>
        <div class="card-body">
          <div class="form-group">
            <label><b>ホテル名</b></label>
            <%= f.text_field :hotel_name, autofocus: true, class: "form-control" %>
          </div>
          <%= f.hidden_field :lat,:value =>"緯度", id: :lat %>
          <%= f.hidden_field :lng,:value =>"経度", id: :lng %>
          <%= render 'google', hotel: @hotel %>
          <%= link_to admins_hotels_path, class: "btn btn-outline-dark" do %>
            <i class="fas fa-undo-alt fa-lg"></i>
          <% end %>
          <%= button_tag type: "submit", class: "ml-3 btn btn-outline-dark" do %>
            <i class="fa-solid fa-pen-to-square fa-lg"></i>&nbsp;更新する
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class='col-6'>
      <div class="card">
        <div class="card-header"><b><%= @hotel.hotel_name %>のレビュー一覧</b></div>
        <%= render 'templates/reviews', reviews: @reviews %>
      </div>
    </div>
  </div>
</div>