<div class='container'>
  <h4>管理者ログイン</h4>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table">
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
    </tr>
    <tr>
    <% if devise_mapping.rememberable? %>
      <td>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を保存する</span>
      </td>
    <% end %>
    </tr>
    <tr>
      <td><%= f.submit "ログイン", class: "btn btn-sm btn-success" %></td>
    </tr>
  </table>
  <% end %>

  <%= render "admins/shared/links" %>
</div>