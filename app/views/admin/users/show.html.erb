<div class='container'>
  <h4 class="mt-3"><%= @user.name %> 様のユーザ詳細</h4>
  <table class="table mt-3">
    <tbody>
      <tr>
        <th>ユーザID</th>
        <td colspan="2"><%= @user.id %></td>
      </tr>
      <tr>
        <th>ユーザ名</th>
        <td colspan="2"><%= @user.name %></td>
      </tr>
      <tr>
        <th>年代</th>
        <td colsoan="2"><%= @user.age_i18n %></td>
      </tr>
      <tr>
        <th>性別</th>
        <td colspan="2"><%= @user.gender_i18n %></td>
      </tr>
      <tr>
        <th>お住まい</th>
        <td colspan="2"><%= @user.area_i18n %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td colspan="2"><%= @user.email %></td>
      </tr>
      <tr>
        <th>ユーザステータス</th>
        <% if @user.is_deleted == false %>
          <td class="text-success" colspan="2">有効</td>
        <% else %>
          <td class="text-danger" colspan="2">退会</td>
        <% end %>
      </tr>
    </tbody>
  </table>
  
</div>