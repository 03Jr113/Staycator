<div class='container'>
  <h4 class="mt-3">ユーザ一覧</h4>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>ユーザID</th>
        <th>ユーザ名</th>
        <th>メールアドレス</th>
        <th>ユーザステータス</th>
        <th> <!--編集ボタン設置--> </th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.id %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if user.is_deleted == false %>
          <td class="text-success">有効</td>
        <% else %>
          <td class="text-danger">退会</td>
        <% end %>
        <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>